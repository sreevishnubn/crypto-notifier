<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Crypto Notify"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select coin"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="375dp"
        android:layout_height="42dp"
        android:entries="@array/coins" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check for:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="365dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/high"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#71E476"
            android:text="High" />

        <Button
            android:id="@+id/low"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="low" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Target Price:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/target_price_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter target price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/check_price_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Check Price" />

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="stop checking"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="@color/design_default_color_error" />


    <TextView
        android:id="@+id/CoinName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="Coin Name:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="59dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/coinName"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="--"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />
    </TableRow>

    <TextView
        android:id="@+id/coinName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="Current Price:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pricevalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="â‚¹0"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />


</LinearLayout>
